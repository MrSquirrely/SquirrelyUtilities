<UserControl x:Class="SquirrelyUtilities.Views.PluginInfoViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquirrelyUtilities.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="TextBlock" Name="PluginNameTextBox" TextWrapping="Wrap" Margin="10,10,10,0" VerticalAlignment="Top"/>
        <hc:Divider Margin="10,31,10,0" VerticalAlignment="Top"/>
        <TextBlock Name="PluginDescriptionTextBlock" Text="Plugin Description" Margin="10,37,10,35"/>
        <Button Width="80" Content="Download" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="40" />
        <hc:Divider VerticalAlignment="Bottom" Margin="10,0,10,0"/>
    </Grid>
</UserControl>
