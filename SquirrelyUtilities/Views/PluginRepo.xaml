<UserControl x:Class="SquirrelyUtilities.Views.PluginRepo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquirrelyUtilities.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="600">
    <StackPanel>
        <hc:SearchBar Name="PluginSearchBar" HorizontalAlignment="Stretch" ShowClearButton="True" IsRealTime="True" SearchStarted="SearchBar_OnSearchStarted"/>
        <GroupBox Style="{StaticResource GroupBoxOriginal}" Header="Plugins" >
            <hc:ScrollViewer>
                <StackPanel Name="PluginPanel"/>
            </hc:ScrollViewer>
        </GroupBox>
    </StackPanel>
</UserControl>
